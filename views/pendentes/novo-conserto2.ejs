<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Novo Conserto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            margin: 0;
            min-height: 100vh;
            background-color: lightskyblue;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

         a{
            text-decoration: none;
            color: white;
        }

        .principal {
            display: flex;
            flex-direction: column;
            background-color: white;
            min-height: 90vh;
            max-width: 1200px;
            margin: 20px auto;
            box-shadow: 0 0 25px rgba(0,0,0,0.25);
            border-radius: 15px;
            overflow: hidden;
        }

        .cabecalho {
            background-color: #004aad;
            padding: 20px;
            text-align: center;
            color: white;
            border-radius: 15px 15px 0 0;
        }

        .logo {
            font-size: 36px;
            font-weight: bold;
            margin: 0;
            letter-spacing: 1px;
            color: white;
        }

        h1 {
            margin-bottom: 40px;
            text-align: center;
            color: #004aad;
            font-weight: bold;
        }

        h4 {
            margin-top: 40px;
            margin-bottom: 40px;
            color: #004aad;
            font-weight: bold;
        }

        p {
            font-size: 1.1rem;
            margin-bottom: 5px;
        }

        form{
            padding: 20px;
        }

        .form-control {
            font-size: 1rem;
            padding: 12px;
            margin-bottom: 20px;
            border-radius: 10px;
        }

        .form-check {
            margin: 20px 0;
        }

        .form-check-label {
            font-size: 1.1rem;
            color: #333;
        }

        #enderecoSection {
            display: none;
        }

        .btn-primary {
            background-color: #004aad;
            border: none;
            padding: 12px 30px;
            font-size: 1.2rem;
            border-radius: 12px;
            margin: 20px;
        }

        .btn-primary:hover {
            background-color: #0069d9;
        }
        
        /* Estilos específicos para a página de informações do aparelho */
        .form-group {
            margin-bottom: 20px;
        }
        
        .radio-group {
            text-align: left;
        }
        
        .radio-group .form-check {
            margin: 15px 0;
        }
        .row{
            margin-top: 45px;
        }

        .btn-voltar {
            color: #fff;
            font-size: 1.2rem;
            text-decoration: none;
            display: flex;
            align-items: center;
            margin-left: 24px;
            transition: color 0.2s;
        }

    </style>
</head>
<body>
    <div class="principal">
        <div class="cabecalho">
            <h1 class="logo">Novo Conserto</h1>
             <a href="/pendentes/novo-cliente" class="btn-voltar">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </div>

        <div class="container-fluid">
            <form class="w-100" action="/pendentes/novo-conserto2" method="POST">
                <h4>Informações do Aparelho</h4>

                <div class="section-title">
                    <p>Nome do Pedido</p>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="nome" placeholder="Identificar o seu pedido">
                </div>

                <div class="section-title">
                    <p>Detalhes do Aparelho</p>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="cor" placeholder="Cor do aparelho">
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <input type="text" class="form-control" name="marca" placeholder="Marca (Ex: Samsung, Philco)">
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control" name="modelo" placeholder="Modelo (Ex: iPhone 13, Galaxy S22)">
                    </div>
                </div>

                <div class="form-group mt-4">
                    <select class="form-control" name="tipo">
                        <option value="">Tipo de aparelho</option>
                        <option value="Televisão">Televisão</option>
                        <option value="Tablet">Tablet</option>
                        <option value="Monitor">Monitor</option>
                        <option value="Celular">Celular</option>
                        <option value="Notebook">Notebook</option>
                        <option value="Outros">Outros</option>
                    </select>
                </div>
                <div class="section-title">
                    <p>Problema</p>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="problema" placeholder="Descreva o problema do aparelho">
                </div>
                 <div class="section-title">
                    <p>Fotos</p>
                </div>
                <div class="form-group">
                    <input type="file" class="form-control" name="fotos" multiple>
                </div>

                <div class="section-title">
                    <p>Informações de Garantia</p>
                </div>
                <div class="form-group">
                    <div class="radio-group">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="garantia" id="garantiaSim" value="sim" onchange="toggleDataGarantia()">
                            <label class="form-check-label" for="garantiaSim">Sim, possui garantia</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="garantia" id="garantiaNao" value="nao" onchange="toggleDataGarantia()">
                            <label class="form-check-label" for="garantiaNao">Não possui garantia</label>
                        </div>
                    </div>
                </div>

                <div class="form-group" id="dataGarantia">
                    <input type="date" class="form-control" name="data_garantia" placeholder="Data da Garantia">
                </div>

                <div class="section-title">
                    <p>Acessórios</p>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="acessorios" placeholder="Acessórios (Ex: Controle remoto, carregador, capa)">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="obs" placeholder="Observações">
                </div>
                <input type="hidden" name="id_cliente" value="<%= id_cliente %>">

                <div class="btn-container">
                    <button type="submit" class="btn btn-primary">Próximo</button>
                </div>
            </form>
        </div>
    </div>

    <script>
       // Função para mostrar/ocultar o campo de data de garantia
        function toggleDataGarantia() {
            const garantiaSim = document.getElementById("garantiaSim");
            const dataGarantiaSection = document.getElementById("dataGarantia");
            
            if (garantiaSim.checked) {
                dataGarantiaSection.style.display = "block";
                // Adiciona animação suave
                dataGarantiaSection.style.opacity = "0";
                setTimeout(() => {
                    dataGarantiaSection.style.opacity = "1";
                }, 10);
            } else {
                // Animação ao esconder
                dataGarantiaSection.style.opacity = "0";
                setTimeout(() => {
                    dataGarantiaSection.style.display = "none";
                });
            }
        }
        
        // Garante que o campo de data esteja oculto no carregamento da página
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById("dataGarantia").style.display = "none";
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>