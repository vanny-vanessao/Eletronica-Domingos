<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Eletrônica Domingos</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/estilos/index.css">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
  </head>
  <body>
    <div class="principal">
      <div class="cabecalho">
        <h1 class="logo">Eletrônica Domingos</h1>
      </div>

      <div class="container-fluid">
        <div class="parte-botoes">
          <a class="botao-dashboard" href="/pendentes/novo-cliente">
            <i class="fas fa-plus-circle"></i> Novo Conserto
          </a>
          <a class="botao-dashboard" href="/pendentes/">
            <i class="fas fa-clock"></i> Consertos Pendentes
          </a>
          <a class="botao-dashboard" href="/concluidos/">
            <i class="fas fa-check-circle"></i> Consertos concluídos
          </a>
          <a class="botao-dashboard" href="/cancelados/">
            <i class="fas fa-ban"></i> Consertos Cancelados
          </a>
          <div
            class="dropdown"
            style="width: 100%; max-width: 250px; margin-top: 100px"
          >
            <button
              class="btn botao-dashboard dropdown-toggle"
              type="button"
              id="dropdownUser"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <i class="fas fa-user"></i> <%= usuario.nome %>
            </button>
            <ul
              class="dropdown-menu"
              aria-labelledby="dropdownUser"
              style="width: 100%"
            >
              <li>
                <a class="dropdown-item dropdown-sair" href="/logout">
                  <i class="fas fa-sign-out-alt"></i> Sair
                </a>
              </li>
            </ul>
          </div>
        </div>

        <div class="parte-pendentes">
          <h2>
            <i class="fas fa-exclamation-triangle"></i> Principais Pendentes
          </h2>
          
          <div class="pedidos-area"></div>
            <div class="cards-list">
              
                  <% 
                            // garante ordens como array
                            const all = Array.isArray(ordens) ? ordens.slice() : [];
                            // ordena por data_registro crescente (mais antigas primeiro)
                            all.sort((a,b) => {
                                const da = new Date(a.data_registro);
                                const db = new Date(b.data_registro);
                                return da - db;
                            });
                            // pega até 3 primeiros
                            const pedidos = all.slice(0,3);
                        %>

                        <% if (pedidos.length > 0) { %>
                            <% pedidos.forEach(o => { %>
                            <div class="card-custom">
                                <h5><%= o.data_registro.toLocaleDateString("pt-BR") %></h5>
                                <p><strong>Cliente:</strong> <%= o.cliente_nome %></p>
                                <p><strong>Aparelho:</strong> <%= o.aparelho_nome %></p>
                                <p><strong>Problema:</strong> <%= o.aparelho_problema %></p>
                                <% if (o.aparelho_fotos) { %>
                                    <img src="<%= o.aparelho_fotos %>" alt="Foto do aparelho">
                                <% } %>
                               <a href="/pendentes/detalhes/<%= o.id %>?from=inicial">Clique para ver detalhes</a>
                            </div>
                        <% }) %>
                    <% } else { %>
                    <p>Nenhuma ordem pendente encontrada</p>
                  <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
